{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "no-var": [
            1
        ],
        "no-unused-vars": [
            1,
            {
              "ignoreSiblings": true,
              "argsIgnorePattern": "res|next|^err"
            }
        ],
        "prefer-const": ["error", {
            "destructuring": "all"
        }],
        "no-unused-expressions": [
            2,
            {
              "allowTaggedTemplates": true
            }
        ],
        "quotes": [
            2,
            "single",
            {
              "avoidEscape": true,
              "allowTemplateLiterals": true
            }
        ],
        "no-array-constructor": [
            2
        ],
        "array-callback-return": [
            2
        ],
        "eqeqeq": [
            2
        ],
        "no-mixed-operators": [
            2
        ]
    }
}